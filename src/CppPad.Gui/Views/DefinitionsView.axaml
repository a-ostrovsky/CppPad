<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
             xmlns:vm="clr-namespace:CppPad.Gui.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:DefinitionsViewModel"
             d:DataContext="{x:Static vm:DefinitionsViewModel.DesignInstance}"
             Loaded="Control_OnLoaded"
             x:Class="CppPad.Gui.Views.DefinitionsView">
    <Grid RowDefinitions="* 2 3*">
        <ListBox Grid.Row="0" 
                 ItemsSource="{CompiledBinding Definitions}"
                 SelectedItem="{CompiledBinding SelectedDefinition}" />
        <GridSplitter Grid.Row="1" ResizeDirection="Rows" Background="Gray" />
        <avaloniaEdit:TextEditor
            Grid.Row="2"
            IsReadOnly="True"
            x:Name="Editor"
            ShowLineNumbers="True"
            FontSize="16"
            FontFamily="Cascadia Code,Consolas,Menlo,Monospace"/>
    </Grid>
</UserControl>
