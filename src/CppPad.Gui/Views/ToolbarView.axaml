<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:CppPad.Gui.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CppPad.Gui.Views.ToolbarView"
             x:DataType="viewModels:ToolbarViewModel"
             d:DataContext="{x:Static viewModels:ToolbarViewModel.DesignInstance}"
             Background="#FFDDDDDD">
    <StackPanel Orientation="Horizontal">
        <Button Content="📄"
                Command="{Binding CreateNewFileCommand}"
                HotKey="Ctrl+N">
            <ToolTip.Tip>
                Creates a new file (Ctrl+N).
            </ToolTip.Tip>
        </Button>
        <SplitButton Content="💾" Command="{Binding SaveFileCommand}">
            <SplitButton.Flyout>
                <MenuFlyout>
                    <MenuItem Header="Save" Command="{Binding SaveFileCommand}" />
                    <MenuItem Header="Save As" Command="{Binding SaveFileAsCommand}" />
                </MenuFlyout>
            </SplitButton.Flyout>
        </SplitButton>
        <Button Content="📂" Command="{Binding OpenFileCommand}"
                HotKey="Ctrl+O">
            <ToolTip.Tip>
                Opens a file from disk (Ctrl+O).
            </ToolTip.Tip>
        </Button>
        <StackPanel Orientation="Horizontal"
                    Margin="10 0 0 0">
            <Button Content="▶️" Command="{Binding BuildAndRunCommand}"
                    HotKey="F5" />
            <Button Content="⏹️" Command="{Binding CancelBuildAndRunCommand}"
                    HotKey="Shift+F5"/>
        </StackPanel>
        <Button Content="🔍" Command="{Binding GoToLineCommand}"
                HotKey="Ctrl+G">
            <ToolTip.Tip>
                Go to a specific line (Ctrl+G).
            </ToolTip.Tip>
        </Button>
        <Button Content="⚙️" Command="{Binding OpenSettingsCommand}">
            <ToolTip.Tip>
                Open settings.
            </ToolTip.Tip>
        </Button>
    </StackPanel>
</UserControl>